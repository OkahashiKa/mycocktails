    <PreserveCompilationContext>true</PreserveCompilationContext>
    <AssemblyName>mycocktails.api.cocktailApi</AssemblyName>
    <PackageId>mycocktails.api.cocktailApi</PackageId>
    <UserSecretsId>facfda98-e1f9-4c2c-83b5-37cb6f86e72f</UserSecretsId>
